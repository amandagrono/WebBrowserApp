<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    tools:context=".BrowserActivity">


    <FrameLayout
        android:id="@+id/page_control"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_max="wrap"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toTopOf="@id/page_display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/page_display"
        android:layout_width="0dp"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_max="wrap"
        app:layout_constraintHeight_percent="0.85"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page_control"
        android:layout_gravity="end"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/browser_control"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_max="wrap"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@+id/page_control"
        app:layout_constraintRight_toLeftOf="@+id/page_display"

        />
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/page_list"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent=".7"
        app:layout_constraintHeight_max="wrap"
        app:layout_constraintTop_toBottomOf="@+id/browser_control"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/page_display"
        />
</androidx.constraintlayout.widget.ConstraintLayout>